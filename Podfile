  pod 'KoalaTeaFlowLayout'
  pod 'NXDrawKit'
  pod 'IGColorPicker'
  pod 'UIFontComplete'
  pod 'Kingfisher', '~> 3.0'
  pod 'FontBlaster'
end

use_frameworks!

target 'Stickers' do
